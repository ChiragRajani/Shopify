<%- include('partials/header') -%>
<link rel="stylesheet" href="stylesheets/login.css" />
</head>
<body>
    <div class="login-wrap">
        <h1>Change Password </h1>
        <h4><%=user.username%></h4>
      
        <form action="/changepassword" method="POST" class="form">
            <div class="form-group">
            <input type="password" placeholder="Old Password" class="form-control"name="oldpassword" id="oldpassword" required />
            </div>
            <div class="form-group">
            <input type="password" placeholder="New Password" class="form-control"name="newpassword" id="newpassword" required  />
        </div>
 
            <button class="btn btn-primary" type="submit">Log in</button> 
            <%if (typeof error != "undefined"){%>
                <p><%= error.message%></p>
                <%}%>
                <% if(messages.error){ %> <h3><%= messages.error %> <% } %></h3>
       <div class="form-group">
        <a  class="form-check-label" href="/register"><label  for="gridCheck"> Don't have an account? Register </label></a>
    </div>
    </form>
    </div>